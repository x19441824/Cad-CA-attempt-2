<%# Form for creating or updating a client, using Rails form_with helper %>
<%= form_with(model: @client, local: true, html: { multipart: true }, class: 'needs-validation', novalidate: true) do |form| %>
  
  <%# Checks if there are any validation errors for the @client object %>
  <% if @client.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <%# Displays the total number of errors found %>
      <h4 class="alert-heading"><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h4>
      <ul>
        <%# Iterates over and displays individual error messages %>
        <% @client.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%# Form group for client's name %>
  <div class="form-group">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, id: :client_name, class: 'form-control' %>
  </div>

  <%# Form group for client's email %>
  <div class="form-group">
    <%= form.label :email, class: 'form-label' %>
    <%= form.email_field :email, id: :client_email, class: 'form-control' %>
  </div>

  <%# Form group for client's address %>
  <div class="form-group">
    <%= form.label :address, class: 'form-label' %>
    <%= form.text_field :address, id: :client_address, class: 'form-control' %>
  </div>

  <%# Form group for client's phone number %>
  <div class="form-group">
    <%= form.label :phone_number, class: 'form-label' %>
    <%= form.telephone_field :phone_number, id: :client_phone_number, class: 'form-control' %>
  </div>

  <%# Form group for client's description %>
  <div class="form-group">
    <%= form.label :description, class: 'form-label' %>
    <%= form.text_area :description, id: :client_description, class: 'form-control' %>
  </div>

  <%# Form group for client's price %>
  <div class="form-group">
    <%= form.label :price, class: 'form-label' %>
    <%= form.text_field :price, id: :client_price, class: 'form-control' %>
  </div>

  <%# Form group for uploading an image %>
  <div class="form-group">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <%# Form submission button %>
  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
